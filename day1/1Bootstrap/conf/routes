# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /sayHi                                   controllers.Application.sayHi

GET        /echo/LastPartOfURL/:lastPart            controllers.Application.echo(lastPart)

GET        /echo/QueryString                        controllers.Application.echoQueryString

GET        /echo/URLPathAfterThis/*everything       controllers.Application.echo(everything)

POST       /echo/upTo10Bytes                        controllers.Application.upTo10Bytes

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                            controllers.Assets.versioned(path="/public", file: Asset)
